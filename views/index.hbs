<div class="container mt-4">
    {{#if semProdutos}}
        <div class="alert alert-warning text-center shadow-sm" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Desculpe!!</h4>
            <p>Todos os produtos estão esgotados ou não foram cadastrados, volte em breve.</p>
        </div>
    {{else}}

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        {{#each produtos}}
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-truncate" title="{{this.nome}}">{{this.nome}}</h5>
                    
                    <p class="card-text mt-3">
                        <span class="d-block">Preço: <strong>R$ {{this.preco}}</strong></span>
                        <span class="d-block text-muted small">Disponíveis: {{this.estoque}}</span>
                    </p>
                </div>
                
                <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center mb-2">
                    <a href="/produto/{{this.id}}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-box-arrow-up-right"></i> Detalhes
                    </a>
                    
                    <a href="/comprar/{{this.id}}" class="btn btn-success btn-sm">
                        <i class="bi bi-bag-check-fill"></i> Comprar
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
