<div class="container mt-5">
    <h2 class="mb-4"><i class="bi bi-speedometer2"></i> Dashboard Administrativo</h2>
    
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3 shadow-sm">
                <div class="card-header">Usuários</div>
                <div class="card-body">
                    <h1 class="card-title display-4">{{stats.usuarios}}</h1>
                    <p class="card-text">Cadastrados no SQL</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 shadow-sm">
                <div class="card-header">Pedidos</div>
                <div class="card-body">
                    <h1 class="card-title display-4">{{stats.pedidos}}</h1>
                    <p class="card-text">Realizados no SQL</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-dark bg-warning mb-3 shadow-sm">
                <div class="card-header">Produtos</div>
                <div class="card-body">
                    <h1 class="card-title display-4">{{stats.produtos}}</h1>
                    <p class="card-text">Ativos no MongoDB</p>
                </div>
            </div>
        </div>
    </div>

    {{#if alertaEstoque}}
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-exclamation-triangle-fill"></i> Alerta: Estoque Baixo (Menos de 10 un.)
        </div>
        <ul class="list-group list-group-flush">
            {{#each alertaEstoque}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{this.nome}}
                <span class="badge bg-danger rounded-pill">{{this.estoque}} unidades</span>
            </li>
            {{/each}}
        </ul>
    </div>
    {{else}}
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> Todos os produtos estão com estoque saudável.
        </div>
    {{/if}}

    <div class="mt-4">
        <a href="/" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Voltar para Loja</a>
    </div>
</div>
