<div class="container mt-5">
    <h2 class="mb-4"><i class="bi bi-clock-history"></i> Histórico de Pedidos</h2>

    {{#if semPedidos}}
        <div class="alert alert-info shadow-sm">
            <i class="bi bi-info-circle"></i> Você ainda não realizou nenhuma compra. 
            <a href="/" class="alert-link">Ir para a loja</a>.
        </div>
    {{else}}
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#ID</th>
                            <th scope="col">Data da Compra</th>
                            <th scope="col">Status</th>
                            <th scope="col">Qtd. Itens</th>
                            <th scope="col">Valor Total</th>
                            <th scope="col" class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each pedidos}}
                        <tr>
                            <th scope="row">{{this.id}}</th>
                            <td>{{this.data}}</td>
                            <td>
                                <span class="badge bg-success">{{this.status}}</span>
                            </td>
                            <td>{{this.qtdItens}} item(ns)</td>
                            <td class="fw-bold text-success">R$ {{this.valor}}</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary disabled" title="Em breve">
                                    <i class="bi bi-eye"></i> Ver Detalhes
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="mt-3 text-end">
            <a href="/" class="btn btn-primary">
                <i class="bi bi-cart-plus"></i> Fazer Novo Pedido
            </a>
        </div>
    {{/if}}
</div>
