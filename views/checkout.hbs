<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-cart-check"></i> Finalizar Compra</h4>
                </div>
                <div class="card-body">
                    <h3 class="card-title">{{produto.nome}}</h3>
                    <h4 class="text-success mb-4">R$ {{produto.preco}}</h4>
                    
                    <form action="/finalizar-compra/{{produto.id}}" method="POST">
                        <div class="mb-3">
                            <label for="quantidade" class="form-label">Quantidade desejada:</label>
                            <input type="number" class="form-control form-control-lg" 
                                   id="quantidade" name="quantidade" 
                                   value="1" min="1" max="{{produto.estoque}}" required>
                            <div class="form-text">Temos {{produto.estoque}} unidades em estoque.</div>
                        </div>

                        <div class="alert alert-light border">
                            <i class="bi bi-info-circle"></i> O valor total será calculado na próxima tela.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Confirmar Pedido</button>
                            <a href="/produto/{{produto.id}}" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
